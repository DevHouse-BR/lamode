<?xml version="1.0"?>
<layout version="0.1.0">
	<default>
		<reference name="head">
			<action method="addCss"><name>aw_blog/css/style.css</name></action>
			<action method="addCss"><name>../../../../js/prototype/windows/themes/default.css</name></action>
			<action method="addCss"><name>../../../../js/prototype/windows/themes/magento.css</name></action>
			<action method="addJs"><name>mage/adminhtml/wysiwyg/tiny_mce/setup.js</name></action>
			<action method="addJs"><name>mage/adminhtml/wysiwyg/widget.js</name></action>
			<action method="addJs"><name>tiny_mce/tiny_mce.js</name></action>
			<action method="addJs"><name>mage/adminhtml/browser.js</name></action>
			
			<action method="addJs"><name>mage/adminhtml/variables.js</name></action>
			<action method="addJs"><name>lib/flex.js</name></action>
			<action method="addJs"><name>lib/FABridge.js</name></action>
			<action method="addJs"><name>mage/adminhtml/flexuploader.js</name></action>
		</reference>
	</default>
    <blog_admin_manage_blog_index>
        <reference name="content">
            <block type="blog/manage_blog" name="blog" />
        </reference>
    </blog_admin_manage_blog_index>
    <blog_admin_manage_blog_edit>
   	    <reference name="js">
			<block type="adminhtml/template" template="aw_blog/head.phtml" name="head_js"></block>
		</reference>
	</blog_admin_manage_blog_edit>	
    <blog_admin_manage_blog_new>
   	    <reference name="js">
			<block type="adminhtml/template" template="aw_blog/head.phtml" name="head_js"></block>
		</reference>
	</blog_admin_manage_blog_new>		
	<blog_admin_manage_comment_index>
        <reference name="content">
            <block type="blog/manage_comment" name="comment" />
        </reference>
    </blog_admin_manage_comment_index>
	<blog_admin_manage_cat_index>
        <reference name="content">
            <block type="blog/manage_cat" name="cat" />
        </reference>
    </blog_admin_manage_cat_index>
</layout>
