<layout version="0.1.0">
    <grdeepzoom_catalog_product_view>
    	 <reference name="head" >
    	 	<action method="addItem"><type>skin_js</type><name>js/gr/deepzoom/seadragon-0-8-4-min.js</name></action>
    	 	<action method="addItem"><type>skin_js</type><name>js/gr/deepzoom/seadragon-ui-0.6.0-min.js</name></action>
    	 	<action method="addItem"><type>skin_css</type><name>css/gr/deepzoom/seadragon-0.6.0.css</name></action>
        </reference>
        <!-- <remove name="product.info.media" />  -->
        <reference name="product.info">
        	<block type="catalog/product_view_media" name="product.info.media.deepzoom" as="media" template="gr/deepzoom/product/view/media.phtml"/>
        </reference>
    </grdeepzoom_catalog_product_view>
</layout>
